template(name='layout')
  +famousContext id="mainCtx"
    +switchRoute
    +RenderController
      +yield

template(name='switchRoute')
  
  +StateModifier align='[1,0]' origin='[1,0]' translate='[-10,0,10]'
    +Surface template='logoutButton' id='switchRoute' size='[true, true]' class='overlay'

template(name='roomsShow')
  +SequentialLayout direction="Y" size="[undefined,undefined]"
    +Surface target="top" template="addRoom" class="list-todo" size="[undefined,40]"
    +middle
    
template(name='addRoom')
  div.btns-group
    div.btn-secondary.add
      span.glyphicon.glyphicon-plus

template(name='second')
  +StateModifier align='[.5,.5]' origin='[.5,.5]'
    +Surface size='[true, true]'
      h1 Second route

template(name='middle')
  +StateModifier    
    +Scrollview id='scrollview'
      +FlexGrid id='flexgrid' marginTop='25'
        +famousEach this.rooms
          +Surface template='roomGridItem' class="room item"

        
template(name='roomGridItem')
  div.parent
    div.child
      h3= name

template(name='logoutButton')
    p Logout
